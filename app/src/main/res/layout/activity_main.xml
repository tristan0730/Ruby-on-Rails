<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/eBaySearchTitle"
        android:id="@+id/title"
        android:textColor="#006699"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Keyword"
        android:id="@+id/keyword"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:paddingTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price From"
        android:id="@+id/priceFrom"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/keyword"
        android:layout_alignParentStart="true"
        android:paddingTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price To"
        android:id="@+id/priceTo"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/priceFrom"
        android:layout_alignParentStart="true"
        android:paddingTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sort By"
        android:id="@+id/sortBy"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/priceTo"
        android:layout_alignParentStart="true"
        android:paddingTop="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/keywordText"
        android:layout_alignTop="@+id/keyword"
        android:layout_alignStart="@+id/title"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/priceFromText"
        android:layout_alignTop="@+id/priceFrom"
        android:layout_alignStart="@+id/keywordText"
        android:layout_alignEnd="@+id/keywordText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/priceToText"
        android:layout_alignTop="@+id/priceTo"
        android:layout_alignStart="@+id/priceFromText"
        android:layout_alignEnd="@+id/priceFromText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clearButton"
        android:id="@+id/clearButton"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/sortBy"
        android:layout_toStartOf="@+id/searchButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchButton"
        android:id="@+id/searchButton"
        android:layout_alignTop="@+id/clearButton"
        android:layout_alignEnd="@+id/priceToText"
        android:layout_marginEnd="70dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sortBySpinner"
        android:layout_alignTop="@+id/sortBy"
        android:layout_toEndOf="@+id/priceFrom"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noResults"
        android:textSize="20dp"
        android:textColor="#ffff0929"
        android:layout_below="@+id/clearButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
